apiVersion: apps/v1
kind: Deployment
metadata:
  name: orion
spec:
  replicas: {{ replicas.orion }}
  selector:
    matchLabels:
      app: orion
  template:
    metadata:
      labels:
        app: orion
    spec:
      containers:
      - name: orion
        image: {{ containers.orion.image }}
        args: ["-dbhost", "mongodb-client", "-rplSet", "rs0", "-dbTimeout", "10000", "-logLevel", "DEBUG"]
        ports:
        - containerPort: 1026
          name: orion
        livenessProbe:
          tcpSocket:
            port: 1026
          failureThreshold: 12
          periodSeconds: 10
        readinessProbe:
          tcpSocket:
            port: 1026
          failureThreshold: 12
          periodSeconds: 10
